{
  "kind": "collectionType",
  "collectionName": "loose_furniture_billings",
  "info": {
    "singularName": "loose-furniture-billing",
    "pluralName": "loose-furniture-billings",
    "displayName": "Loose Furniture - Billings",
    "description": "Loose furniture billing records and invoice information"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "billing_id": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "customer": {
      "type": "string",
      "required": false
    },
    "invoice_number": {
      "type": "string",
      "required": false
    },
    "invoice_date": {
      "type": "date",
      "required": true
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "USD",
      "required": false
    },
    "collected_date": {
      "type": "date",
      "required": false
    },
    "recognition_month": {
      "type": "date",
      "required": false
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "sent", "paid", "overdue", "cancelled"],
      "required": false
    },
    "payment_reference": {
      "type": "string",
      "required": false
    },
    "construction_cost": {
      "type": "decimal",
      "required": false
    },
    "project_profit": {
      "type": "decimal",
      "required": false
    }
  }
}

