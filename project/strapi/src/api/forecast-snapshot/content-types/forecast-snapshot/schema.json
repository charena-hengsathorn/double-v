{
  "kind": "collectionType",
  "collectionName": "forecast_snapshots",
  "info": {
    "singularName": "forecast-snapshot",
    "pluralName": "forecast-snapshots",
    "displayName": "Forecast Snapshot",
    "description": "Forecast snapshots generated by predictive service"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "snapshot_id": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "snapshot_date": {
      "type": "date",
      "required": true
    },
    "scenario": {
      "type": "enumeration",
      "enum": [
        "base",
        "optimistic",
        "pessimistic",
        "custom"
      ],
      "required": true,
      "default": "base"
    },
    "probability": {
      "type": "decimal",
      "min": 0,
      "max": 100,
      "required": true
    },
    "expected_amount": {
      "type": "decimal",
      "required": true
    },
    "expected_month": {
      "type": "date",
      "required": true
    },
    "expected_margin": {
      "type": "decimal",
      "required": false
    },
    "model_version": {
      "type": "string",
      "required": false
    },
    "author_id": {
      "type": "string",
      "required": false
    },
    "deal": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::pipeline-deal.pipeline-deal",
      "inversedBy": "forecast_snapshots"
    }
  }
}
