# Strapi Environment Variables
# Copy this file to .env.local and fill in your values
# For production, these are set in Heroku config vars

# Application
HOST=0.0.0.0
PORT=1337
NODE_ENV=development

# Strapi Secrets (generate with: openssl rand -base64 32)
APP_KEYS=your-app-keys-here,generate-with-openssl,generate-with-openssl,generate-with-openssl
API_TOKEN_SALT=your-api-token-salt-here
ADMIN_JWT_SECRET=your-admin-jwt-secret-here
JWT_SECRET=your-jwt-secret-here
TRANSFER_TOKEN_SALT=your-transfer-token-salt-here

# Database
# Option 1: Use DATABASE_URL (recommended for Heroku compatibility)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/strapi

# Option 2: Use individual variables (if DATABASE_URL not available)
DATABASE_CLIENT=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false

# Webhooks
STRAPI_WEBHOOK_SECRET=your-webhook-secret-here

# URLs
STRAPI_URL=http://localhost:1337
FRONTEND_URL=http://localhost:3000
PREDICTIVE_SERVICE_URL=http://localhost:8000
