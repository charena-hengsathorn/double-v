# Predictive Service Environment Variables
# Copy this file to .env.local and fill in your values
# For production, these are set in Heroku config vars

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
PORT=8000

# Strapi Integration
# For local development, use localhost
STRAPI_URL=http://localhost:1337/api
# For production, this will be: https://double-v-strapi-dd98523889e0.herokuapp.com/api
STRAPI_API_TOKEN=your-strapi-api-token-here
STRAPI_WEBHOOK_SECRET=your-webhook-secret-here

# Database (Optional - if connecting directly to PostgreSQL)
# Usually not needed as we use Strapi API
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dbname

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Currency Exchange (Optional)
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key

# CORS
# Allow local development and production frontend
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://double-v-frontend.vercel.app

# Model Configuration
MODEL_VERSION=1.0.0
MONTE_CARLO_ITERATIONS=10000
FORECAST_HORIZON_MONTHS=12
